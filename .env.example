# ============================================
# Polymarket Trading Bot - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# cp env.example .env

# ============================================
# Wallet Configuration (REQUIRED)
# ============================================
# Your private key for the wallet that will execute trades
# WARNING: Never commit your private key to version control!


# Polygon RPC endpoint (defaults to public RPC if not set)
POLYGON_RPC_URL=https://polygon-rpc.com
# Alternative: Use a dedicated RPC provider like Alchemy or Infura
# POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# ============================================
# Polymarket API Configuration
# ============================================
# CLOB API URL (defaults to production if not set)
CLOB_API_URL=https://clob.polymarket.com

# Relayer URL (defaults to production if not set)
RELAYER_URL=https://relayer-v2.polymarket.com/

# Polygon Chain ID (defaults to 137 for mainnet)
POLYGON_CHAIN_ID=137

# ============================================
# Builder Credentials (OPTIONAL)
# ============================================
# These are optional and used for order attribution
# Leave blank if you don't have builder credentials
POLYMARKET_BUILDER_API_KEY=
POLYMARKET_BUILDER_SECRET=
POLYMARKET_BUILDER_PASSPHRASE=

# ============================================
# Trading Configuration
# ============================================
# Token ID of the market you want to trade
# Find this on Polymarket by inspecting the market URL
# Example: "0x1234567890abcdef1234567890abcdef12345678"
TARGET_TOKEN_ID=

# Trading strategy to use
# Options: "balanced", "meanReversion", "momentum", "arbitrage"
TRADING_STRATEGY=balanced

# Order size in USD (defaults to 10)
ORDER_SIZE=10

# Minimum price to trade at (defaults to 0.01)
MIN_PRICE=0.01

# Maximum price to trade at (defaults to 0.99)
MAX_PRICE=0.99

# How often to poll for market data in milliseconds (defaults to 5000 = 5 seconds)
POLL_INTERVAL_MS=5000

# Maximum number of orders to place per trading cycle (defaults to 1)
MAX_ORDERS_PER_CYCLE=1

# ============================================
# Risk Management
# ============================================
# Maximum position size in USD (defaults to 100)
MAX_POSITION_SIZE=100

# Stop loss percentage (defaults to 0.05 = 5%)
# Exit position if loss exceeds this percentage
STOP_LOSS_PERCENTAGE=0.05

# Take profit percentage (defaults to 0.10 = 10%)
# Exit position if profit exceeds this percentage
TAKE_PROFIT_PERCENTAGE=0.10

# ============================================
# Logging Configuration
# ============================================
# Log level: "error", "warn", "info", "debug" (defaults to "info")
LOG_LEVEL=info

# Log file path (defaults to "logs/bot.log")
LOG_FILE=logs/bot.log

